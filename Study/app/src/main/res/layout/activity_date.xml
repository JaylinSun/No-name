<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:background="#b3eab3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGetMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:gravity="center"
                android:text="收到信息"
                android:textSize="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:hint="你要回复的信息"
                android:textSize="20dp"
                android:id="@+id/etBackMSG"/>

            <Button
                android:id="@+id/btnReturnActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回信息"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:background="#f48989"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnInitBroadcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvBatteryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电池信息："
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
